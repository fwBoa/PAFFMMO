# PAFFMMO - Variables d'environnement
# =====================================
# Copiez ce fichier en .env et modifiez les valeurs

# Django
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Base de donn√©es
# Options: sqlite3, oracle
DATABASE_ENGINE=sqlite3

# Oracle Database (si DATABASE_ENGINE=oracle)
DATABASE_NAME=FREEPDB1
DATABASE_USER=paffmmo
DATABASE_PASSWORD=paffmmo_secret
DATABASE_HOST=db
DATABASE_PORT=1521

# Oracle root password
ORACLE_PASSWORD=oracle

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Logging
DJANGO_LOG_LEVEL=INFO
